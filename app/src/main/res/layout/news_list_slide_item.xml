<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector">

    <com.gc.materialdesign.views.LayoutRipple
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="@dimen/space_8"
        app:rippleSpeed="60">

        <TextView
            android:id="@+id/news_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/alpha_95_black"
            android:textSize="@dimen/text_size_17"/>

        <LinearLayout
            android:id="@+id/news_image_layout"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_below="@+id/news_item_title"
            android:layout_marginBottom="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/news_item_image1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/news_item_image2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/news_item_image3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/news_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/news_image_layout"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_12"/>

    </com.gc.materialdesign.views.LayoutRipple>
</FrameLayout>